<%= form_for(@user) do |f| %>
  <%= render 'shared/error_messages', :obj => @user %>
  
  <%= f.label :name, "Name*" %>
  <%= f.text_field :name %>
  <br/>
  <%= f.label :email, "Email*" %>
  <%= f.text_field :email %>
  <br/>
  <%= f.label :about_text, "Your Story" %>
  <%= f.text_area :about_text, rows: '3' %>
  <br/>
  <%= f.label :password, "Password*" %>
  <%= f.password_field :password %>
  <br/>
    <%= f.label :password_confirmation, "Password Confirmation" %>
	<%= f.password_field :password_confirmation %>
  <br/>
  <%= f.submit "Submit", class: "btn btn-primary btn-lg", role: 'button' %>
<% end %>